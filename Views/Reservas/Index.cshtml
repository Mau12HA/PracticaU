@model IEnumerable<ArSpFi.Models.Reserva>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<h2 class="text-dark h2" style="font-family: 'AhaWow'">Lista de Reservaciones</h2>

<p>
    <a class="text-danger h4" asp-action="Create" style="font-family: 'AhaWow'">Crear Reservacion</a>
</p>
<table class="table table-success table-striped ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodReserva)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.NombCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoCliente)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.TelefonoCliente)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FechaReservacion)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.TipoTour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantPasajeros)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Yate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.FkUsuarioNavigation)
            </th>*@
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodReserva)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.NombCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoCliente)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.TelefonoCliente)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.FechaReservacion)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.TipoTour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantPasajeros)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Yate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.FkUsuarioNavigation.Nombre)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdReserva">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdReserva">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdReserva">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
