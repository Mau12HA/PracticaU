<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/estilos.css" rel="stylesheet" />
    <link href="~/layout/styles/layout.css" rel="stylesheet" />
    <link href="~/layout/styles/framework.css" rel="stylesheet" />
</head>
<body id="top">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-4" style="height:80px; padding-left:10px">
            <div class="container">
                <a class="h3 text-light" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'AhaWow';">Arguedas Sport Fishing</a>
                <div class="navbar-collapse collapse d-sm-inline justify-content-end">
                    <ul class="navbar-nav d-sm-inline-flex">
                        <li class="nav-link"><i class="fa fa-sign-out fa fa-2x fa-colordanger"></i> <a class="h3 text-danger" asp-controller="Home" asp-action="Index" style="font-family: 'AhaWow'">Salir</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!--  <div style="background-image:url(images/bgslider.jpg)">-->

    <div class="container" style=" height: 598px; padding-top:30px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <!-- ################################################################################################ -->


    <div class="wrapper row5" style="font-family: 'AhaWow'">
        <div id="copyright" class="hoc clear" style="font-family: 'AhaWow'">
             <p class="fl_left">Copyright &copy; @DateTime.Now.Year - All Rights Reserved - <a>Arguedas Fishing</a></p>
        </div>
    </div>

    <!-- ################################################################################################ -->
    <a id="backtotop" href="#top"><i class="fa fa-chevron-up"></i></a>


    <script src="~/js/bootstrap.js"></script>
    <script src="~/layout/scripts/jquery.min.js"></script>
    <script src="~/layout/scripts/jquery.backtotop.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
