@model IEnumerable<ArSpFi.Models.Reserva>
@{
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<h2 class="text-dark" style="font-family: 'AhaWow';">Listado de Reservaciones</h2>

<p>
    <a class="text-success" asp-controller="Reservas" asp-action="Create" style="font-family: 'AhaWow';">Crear Reservacion</a>
    <a class="text-warning d-grid gap-2 d-md-flex justify-content-md-end" style="font-family: 'AhaWow';">Mensajes</a>
</p>

