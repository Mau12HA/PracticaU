    <div class="btn-lg">
        <button type="button" class="btn btn-success" style="font-family: 'AhaWow';">Mensajes</button>
    </div>
   
</div>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaReservacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorreoCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReservacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a asp-controller="Reservas" asp-action="Edit" asp-route-id="@item.IdReserva">Editar</a> |
                    <a asp-controller="Reservas" asp-action="Details" asp-route-id="@item.IdReserva">Detalles</a> |
                    <a asp-controller="Reservas" asp-action="Delete" asp-route-id="@item.IdReserva">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>




