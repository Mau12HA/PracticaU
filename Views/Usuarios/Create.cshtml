@model ArSpFi.Models.Usuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<h2 class="text-dark h2" style="font-family: 'AhaWow'">Creacion de Usuarios</h2>

<div class="row text-dark"><hr />
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label" style="font-family: 'AhaWow'"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label" style="font-family: 'AhaWow'"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" style="font-family: 'AhaWow'"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkRol" class="control-label" style="font-family: 'AhaWow'"></label>
                <select asp-for="FkRol" class ="form-control" asp-items="ViewBag.FkRol"></select>
            </div>
            <div class="form-group" style="margin-top:35px">
                <input type="submit" value="Crear" class="btn btn-default bg-success" style="font-family: 'AhaWow';margin-right:10px" /> |
                <a class="h4" asp-action="Index" style="font-family: 'AhaWow'; margin-left:10px">Lista de Usuarios</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
